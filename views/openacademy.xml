<odoo>
  <data>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="course_list_action">
      <field name="name">Courses</field>
      <field name="res_model">openacademy.course</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
          <p class="0_view_nocontent_smiling_face">Create the firs course
          </p>

      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Open Academy" id="main_openacademy_menu"/>
    <menuitem name="Courses" id="courses_menu" parent="main_openacademy_menu"/>
    <menuitem name="Menu 2" id="openacademy.menu_2" parent="openacademy_menu"
              action="course_list_action" />
              
  </data>
</odoo>